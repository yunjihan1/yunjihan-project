{
  "manifest_version": 3, 
  "name": "링크 검사",
  "version": "1.0",
  "description": "링크를 우클릭하면 유효성을 검사해 점수화하여 링크가 위험한지 안전한지 알려준다",
  "permissions": ["contextMenus", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}